    },
    "basePath": "/",
    "paths": {
        "/income": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "summary": "Получение входящих сообщений",
                "responses": {
                    "200": {
                        "description": "Список входящих писем",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.Mail"
                            }
                        }
                    },
                    "401": {
                        "description": "Access denied"
                    },
                    "500": {
                        "description": ""
                    }
                }
            }
        },
        "/logout": {
            "get": {
                "summary": "Завершение сессии пользователя",
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "401": {
                        "description": "Access denied"
                    },
                    "500": {
                        "description": ""
                    }
                }
            }
        },
        "/outcome": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "summary": "Получение исходящих сообщений",
                "responses": {
                    "200": {
                        "description": "Список исходящих писем",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.Mail"
                            }
                        }
                    },
                    "401": {
                        "description": "Access denied"
                    },
                    "500": {
                        "description": ""
                    }
                }
            }
        },
        "/profile": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "summary": "Получение данных профиля пользователя",
                "responses": {
                    "200": {
                        "description": "Информация о пользователе",
                        "schema": {
                            "$ref": "#/definitions/models.User"
                        }
                    },
                    "401": {
                        "description": "Access denied"
                    },
                    "500": {
                        "description": ""
                    }
                }
            }
        },
        "/signin": {
            "post": {
                "summary": "Выполняет аутентификацию пользователя",
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "500": {
                        "description": ""
                    }
                }
            }
        },
        "/signup": {
            "post": {
                "summary": "Выполняет регистрацию пользователя",
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "500": {
                        "description": ""
                    }
                }
            }
        }
    },
    "definitions": {
        "models.Mail": {
            "description": "Структура письма",
            "type": "object",
            "properties": {
                "addressee": {
                    "type": "string"
                },
                "date": {
                    "type": "string"
                },
                "files": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "sender": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                },
                "theme": {
                    "type": "string"
                }
            }
        },
        "models.User": {
            "description": "Структура пользователя",
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "firstName": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "lastName": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        }
    }
}