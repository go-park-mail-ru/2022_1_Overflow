{
    "swagger": "2.0",
    "info": {
        "description": "API почтового сервиса команды Overflow.",
        "title": "OverMail API",
        "contact": {
            "name": "Роман Медников",
            "url": "https://vk.com/l____l____l____l____l____l",
            "email": "jellybe@yandex.ru"
        },
        "version": "1.0"
    },
    "basePath": "/",
    "paths": {
        "/income": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "summary": "Получение входящих сообщений",
                "responses": {
                    "200": {
                        "description": "Список входящих писем",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.Mail"
                            }
                        }
                    },
                    "401": {
                        "description": "Сессия отсутствует, сессия не валидна."
                    },
                    "500": {
                        "description": ""
                    }
                }
            }
        },
        "/logout": {
            "get": {
                "produces": [
                    "text/plain"
                ],
                "summary": "Завершение сессии пользователя",
                "responses": {
                    "200": {
                        "description": "Успешное завершение сессии."
                    },
                    "401": {
                        "description": "Сессия отсутствует, сессия не валидна."
                    },
                    "500": {
                        "description": ""
                    }
                }
            }
        },
        "/outcome": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "summary": "Получение исходящих сообщений",
                "responses": {
                    "200": {
                        "description": "Список исходящих писем",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.Mail"
                            }
                        }
                    },
                    "401": {
                        "description": "Access denied"
                    },
                    "500": {
                        "description": ""
                    }
                }
            }
        },
        "/profile": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "summary": "Получение данных профиля пользователя",
                "responses": {
                    "200": {
                        "description": "Информация о пользователе",
                        "schema": {
                            "$ref": "#/definitions/models.User"
                        }
                    },
                    "401": {
                        "description": "Сессия отсутствует, сессия не валидна."
                    },
                    "500": {
                        "description": "Ошибка БД, пользователь не найден, неверные данные сессии."
                    }
                }
            }
        },
        "/signin": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "text/plain"
                ],
                "summary": "Выполняет аутентификацию пользователя",
                "parameters": [
                    {
                        "description": "Форма входа пользователя",
                        "name": "SignInForm",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.SignInForm"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Успешная аутентификация пользователя."
                    },
                    "500": {
                        "description": "Пользователь не существует, ошибка БД или валидации формы."
                    }
                }
            }
        },
        "/signup": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "text/plain"
                ],
                "summary": "Выполняет регистрацию пользователя",
                "parameters": [
                    {
                        "description": "Форма регистрации пользователя",
                        "name": "SignUpForm",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.SignUpForm"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Успешная регистрация пользователя."
                    },
                    "500": {
                        "description": "Ошибка валидации формы, БД или пользователь уже существует."
                    }
                }
            }
        }
    },
    "definitions": {
        "models.Mail": {
            "description": "Структура письма",
            "type": "object",
            "properties": {
                "addressee": {
                    "type": "string"
                },
                "date": {
                    "type": "string"
                },
                "files": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "sender": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                },
                "theme": {
                    "type": "string"
                }
            }
        },
        "models.SignInForm": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "maxLength": 20
                },
                "password": {
                    "type": "string",
                    "maxLength": 20
                }
            }
        },
        "models.SignUpForm": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "maxLength": 20
                },
                "first_name": {
                    "type": "string",
                    "maxLength": 20
                },
                "last_name": {
                    "type": "string",
                    "maxLength": 20
                },
                "password": {
                    "type": "string",
                    "maxLength": 20
                },
                "password_confirmation": {
                    "type": "string",
                    "maxLength": 20
                }
            }
        },
        "models.User": {
            "description": "Структура пользователя",
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "firstName": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "lastName": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        }
    }
}